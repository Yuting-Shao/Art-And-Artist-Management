<!DOCTYPE html>
<html>
<head>
    <title>Artworks of Artist <%= artistID %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
    <div class="container">
        <h1>Artworks of Artist <%= artistID %></h1>
        
        <% if (artworks.length === 0) { %>
            <p>No artworks found for this artist.</p>
        <% } else { %>
            <% artworks.forEach(function(artwork){ %>
                <div class="artwork-card">
                    <h3><%= artwork.title %></h3>
                    <p>Price: <%= artwork.price %></p>
                    <p>ID: <%= artwork.artworkID %></p>
                    <p>Artist ID: <%= artwork.artistID %></p>
                    <p>Medium: <%= artwork.medium %></p>
                    <p>Dimensions: <%= artwork.dimensions %></p>
                    <p>Creation Date: <%= artwork.creationDate %></p>
                    <p>Availability Status: <%= artwork.availabilityStatus %></p>
                </div>
            <% }); %>
        <% } %>
    </div>

    <footer>
        <div> Made by Yuting</div>
    </footer>
</body>
</html>
